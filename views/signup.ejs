<style>
    .form li {
        list-style: none;
        text-align: center;
        display: inline-block;
    }

    form,
    h1 {
        text-align: center;
    }

    .form a {
        text-decoration: none;
        border: 2px solid lightgray;
        border-radius: 4px;
        background-color: white;
        padding: 9px;
        font-style: inherit;
        font-weight: bold;
    }

    button {
        border: 2px solid lightgray;
        border-radius: 4px;
        background-color: white;
        padding: 9px 15px;
        font-style: inherit;
        font-weight: bold;
    }

    button:hover {
        color: red;
    }

    input {
        border: 2px solid rgb(88, 86, 86);
        padding: 10px 7px;
        border-radius: 4px;

    }

    .form {
        margin: 60px 450px;
        padding: 130px 0;
        background-color: #318ab9;
        border: 1px solid lightgray;
        box-shadow: inset;
        border-radius: 4px;
    }

    .btns {
        margin: 10px;
        display: flex;
        flex-direction: row;
